{
  "name": "@parch-js/parch-rest-serializer",
  "version": "0.0.1",
  "description": "RestSerializer for parch to normalize request/response",
  "main": "index.js",
  "types": "lib/serializer.d.ts",
  "scripts": {
    "changelog": "conventional-changelog -s -p angular -i CHANGELOG.md",
    "coverage": "NODE_ENV=test istanbul cover ./node_modules/mocha/bin/_mocha -- --compilers ts:ts-node/register --recursive",
    "build": "tsc -p .",
    "build:watch": "chokidar 'src/**/*' 'test/**/*.ts' -c 'npm run build'",
    "lint": "tslint src/**/*.ts",
    "prepare-release": "curl -sL https://gist.githubusercontent.com/dylanfoster/35b06db9aaa9237da77eff4a8eec0a22/raw/83ec714ec64f7ec36c5004588aa259354fc87b51/prepare-release.sh | bash -s",
    "prepublish": "npm run build",
    "pretest": "npm run build",
    "test": "mocha --compilers ts:ts-node/register --recursive",
    "test:cover": "npm run coverage",
    "test:watch": "chokidar 'src/**/*.ts' 'test/**/*.ts' -c 'npm test' --initial",
    "watch": "npm run test:watch"
  },
  "repository": "https://github.com/parch-js/rest-serializer",
  "author": "Dylan Foster <dylan947@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^3.4.35",
    "@types/mocha": "^2.2.40",
    "@types/node": "^7.0.12",
    "@types/sequelize": "^3.4.43",
    "chai": "^3.5.0",
    "chokidar-cli": "^1.2.0",
    "conventional-changelog-cli": "^1.3.1",
    "istanbul": "1.0.0-alpha.2",
    "mocha": "^3.2.0",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.9.0",
    "sqlite3": "^3.1.8",
    "ts-node": "^3.0.2",
    "tslint": "^5.0.0",
    "tslint-config-standard": "^4.0.0",
    "typescript": "^2.2.2"
  },
  "dependencies": {
    "inflect": "^0.3.0",
    "sequelize": "^3.30.4"
  }
}
